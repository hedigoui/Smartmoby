<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="220.0" prefWidth="320.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.models.CardTrajet">
    <VBox spacing="15" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="15.0">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="vehiculeType" prefHeight="27.0" prefWidth="290.0"
                   style="-fx-background-color: #e3f2fd; -fx-text-fill: #1976d2;
                   -fx-padding: 5 10; -fx-background-radius: 15;" />
        </HBox>
        <HBox alignment="CENTER" spacing="15">
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label fx:id="pointD" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" wrapText="true" />
            </VBox>
            <VBox alignment="CENTER">
                <Label style="-fx-text-fill: #7f8c8d;" text="→" />
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label fx:id="pointA" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" wrapText="true" />
            </VBox>
        </HBox>
        <VBox spacing="8" style="-fx-background-color: #f8f9fa; -fx-padding: 12; -fx-background-radius: 8;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-text-fill: #6c757d;" text="Départ:" />
                <Label fx:id="dateD" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-text-fill: #6c757d;" text="Arrivée:" />
                <Label fx:id="dateA" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
        <HBox alignment="CENTER" spacing="30">
            <VBox alignment="CENTER" style="-fx-background-color: #e8f5e9; -fx-padding: 8 15; -fx-background-radius: 8;">
                <Label style="-fx-text-fill: #2e7d32;" text="Distance" />
                <Label fx:id="distance" style="-fx-font-weight: bold; -fx-text-fill: #1b5e20;" />
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color: #fff3e0; -fx-padding: 8 15; -fx-background-radius: 8;">
                <Label style="-fx-text-fill: #f57c00;" text="Prix" />
                <Label fx:id="prix" style="-fx-font-weight: bold; -fx-text-fill: #e65100;" />
            </VBox>
        </HBox>
        <Button fx:id="btnDetails" text="Voir détails" onAction="#voirDetails" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>