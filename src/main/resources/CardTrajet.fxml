<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" styleClass="trajet-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.models.CardTrajet">
    <children>
        <VBox spacing="10" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <!-- Journey Points Section -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="pointD" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" styleClass="location-label">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label style="-fx-text-fill: #7f8c8d;" text="→">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="pointA" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" styleClass="location-label">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Date Section -->
            <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #6c757d;" text="Départ:" />
                    <Label fx:id="dateD" style="-fx-text-fill: #2c3e50;" />
                </HBox>
                <HBox spacing="10">
                    <Label style="-fx-text-fill: #6c757d;" text="Arrivée:" />
                    <Label fx:id="dateA" style="-fx-text-fill: #2c3e50;" />
                </HBox>
            </VBox>

            <!-- Details Section -->
            <HBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER">
                    <Label style="-fx-text-fill: #6c757d;" text="Distance" />
                    <Label fx:id="distance" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label style="-fx-text-fill: #6c757d;" text="Prix" />
                    <Label fx:id="prix" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>