<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="630.0" prefWidth="961.0" style="-fx-background-radius: 50;" styleClass="transparent"
            stylesheets="@trajet-view.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.TrajetsViewController">
    <children>
        <!-- Header Section -->
        <ImageView fitHeight="88.0" fitWidth="87.0" layoutX="749.0" pickOnBounds="true" preserveRatio="true">
            <image>

            </image>
        </ImageView>

        <!-- Left Navigation Panel -->
        <VBox layoutY="88.0" prefHeight="496.0" prefWidth="157.0" styleClass="selected-button-container">
            <children>
                <!-- Logo and Title -->
                <HBox prefHeight="61.0" prefWidth="124.0">
                    <children>
                        <ImageView fitHeight="67.0" fitWidth="81.0" pickOnBounds="true" preserveRatio="true">

                        </ImageView>
                        <Label prefHeight="62.0" prefWidth="72.0" text="Trajets" textAlignment="CENTER"
                               textFill="#d4cbcb">
                            <font>
                                <Font name="System Bold Italic" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Navigation Buttons -->
                <HBox styleClass="button-container-mouse-moved" prefHeight="35.0" prefWidth="124.0">
                    <children>
                        <ImageView fitHeight="32.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">

                        </ImageView>
                        <Label text="ACCUEIL" textFill="#d4cbcb">
                            <font>
                                <Font name="System Bold Italic" size="13.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Add more navigation items as needed -->
            </children>
        </VBox>

        <!-- Main Content Area -->
        <VBox alignment="CENTER" layoutX="158.0" layoutY="87.0" prefHeight="503.0" prefWidth="788.0">
            <!-- Search and Filter Section -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="200.0"/>
                <ComboBox fx:id="sortComboBox" promptText="Trier par" prefWidth="150.0"/>
                <ComboBox fx:id="filterComboBox" promptText="Filtrer" prefWidth="150.0"/>
                <Button fx:id="addTrajetButton" text="+ Nouveau Trajet"
                        styleClass="add-button">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </HBox>

            <!-- Grid Container for Cards -->
            <GridPane fx:id="grid" alignment="CENTER" hgap="10" vgap="10"
                      style="-fx-padding: 10;">
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                </rowConstraints>
            </GridPane>

            <!-- Pagination -->
            <Pagination fx:id="pagination" prefHeight="520.0" prefWidth="788.0" />
        </VBox>

        <!-- Header Title -->
        <Label layoutX="629.0" layoutY="18.0" prefHeight="50.0" prefWidth="110.0"
               text="TRAJETS" textAlignment="CENTER" textFill="#d4cbcb">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>

        <!-- Current Date/Time -->
        <Label fx:id="dateTimeLabel" layoutX="247.0" layoutY="31.0" textFill="#d4cbcb">
            <font>
                <Font name="System Italic" size="14.0" />
            </font>
        </Label>

        <!-- Exit Button -->
        <ImageView fitHeight="28.0" fitWidth="29.0" layoutX="892.0" pickOnBounds="true"
                   preserveRatio="true" styleClass="exit-button">

            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
    </children>
</AnchorPane>