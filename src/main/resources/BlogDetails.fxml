<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.BlogDetailsController">
    <children>
        <Pane layoutX="83.0" layoutY="50.0" prefHeight="216.0" prefWidth="734.0">
            <children>
                <TextArea fx:id="titleTextArea" editable="false" layoutX="55.0" layoutY="72.0" prefHeight="119.0" prefWidth="625.0" />
                <TextArea fx:id="contentTextArea" editable="false" layoutX="56.0" layoutY="17.0" prefHeight="39.0" prefWidth="625.0" />
            </children>
        </Pane>
        <Pane layoutX="83.0" layoutY="289.0" prefHeight="278.0" prefWidth="734.0">
            <children>
                <TextField fx:id="commentTextField" layoutX="33.0" layoutY="235.0" prefHeight="25.0" prefWidth="442.0" promptText="Enter your comment..." />
                <ListView fx:id="commentsListView" layoutX="33.0" layoutY="14.0" prefHeight="200.0" prefWidth="667.0" />
                <Button fx:id="commentButton" layoutX="632.0" layoutY="233.0" mnemonicParsing="false" onAction="#handleAddComment" text="Comment" />
            <Button fx:id="deletebutton" layoutX="557.0" layoutY="233.0" mnemonicParsing="false" onAction="#DeleteComment" prefHeight="25.0" prefWidth="68.0" text="Delete" />
            <Button fx:id="updatebutton" layoutX="481.0" layoutY="234.0" mnemonicParsing="false" onAction="#UpdateComment" prefHeight="25.0" prefWidth="68.0" text="Update" />
            </children>
        </Pane>
    </children>
</AnchorPane>
